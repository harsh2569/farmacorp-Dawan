{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

<style>
.page-image-with-text {
    margin-top: 93px;
}


  .page-image-with-text .image-with-text__content {
    justify-content: flex-start;
    padding-top: 0px;
    max-width: 519px;
    margin-left: initial;
    padding-right: 0;
    padding-bottom: 0px;
}

#page-with-text h2.image-with-text__heading {
    font-weight: 500;
    font-size: 48px;
    line-height:54px;
}
#page-with-text p{
   color: rgb(0 0 0 / 60%);
}
#page-with-text  strong {
    margin-top: 50px;
    display: block;
    margin-bottom: 20px;
    color:#000;
}

  #page-with-text a.button.button--primary {
    margin-top: 65px;
    border-radius: 8px;
    padding: 8px 16px;
    display: flex;
    column-gap: 6px;

  }


  @media screen and (max-width: 749px) {
    {% if section.settings.mobile_image_placement == 'first' %}
    #Banner-{{ section.id }} .image-with-text__grid{
      flex-direction: column-reverse;
    }
    {% endif %}
  }
  
  @media screen and (min-width: 768px) {
    .mobileShow {
      display: none !important;
    }
  }

  @media screen and (max-width: 767px) {
    .desktopShow {
      display: none !important;
    }

      .page-header {
      margin-top: 0px;
      padding-top: 45px;
      border-top: 1px solid #CFD5E1;
    }
    .page-breadrumb {
    display:none;
    }

      .page-heading h1.heading__h1 {
      font-size: 24px;
      line-height: 32px;
      letter-spacing: -0.2px;
    }
      .page-heading .heading__subtext {
      font-size: 16px;
      line-height: 24px;
      letter-spacing: -0.2px;
      color: rgba(0, 0, 0, 0.5);
      margin-top: 8px;
    }
     .spaced-section-page {
      margin-top: 21px;
    }
      .page-image-with-text .image-with-text__content {
      padding-left: 0px;
    }
      .page-farma-movil .farma-tel{ 
      margin-left: -15px;
      }
 
    .page-image-with-text {
    margin-top: 45px;
    }
    #page-with-text h2.image-with-text__heading {
    font-weight: 600;
    font-size: 20px;
    line-height: 26px;
    padding-left: 15px;
    }
    #page-with-text .image-with-text__text.rte.body{
      padding-left: 15px;
    }
    #page-with-text strong {
    margin-top: 30px;
    display: block;
    margin-bottom: 20px;
    line-height: 22px;
    }
     #page-with-text  .image-with-text__content>*+* {
      margin-top: 0px;
    }
      #page-with-text a.button.button--primary {
      margin: 0 auto;
      margin-top: 34px;
      margin-bottom: 45px;
    }
      #page-with-text p {
      color: rgb(0 0 0 / 60%);
      max-width: 360px;
    }


  }
</style>
<div id="{% if section.settings.section_id != blank %}{{section.settings.section_id}}{% else %}Banner-{{ section.id }}{% endif %}" class="page-width image-with-text {% if page.handle contains 'farma-movil' %} page-image-with-text {% endif %} {% if section.settings.full_width %}image-with-text--full-width{% else %}{% endif %} image-with-text--{{ section.settings.content_layout }} color-scheme-{{ section.settings.color_scheme }} {{ section.settings.additional_class }}">
  <div class="image-with-text__grid grid grid--gapless grid--1-col grid--{% if section.settings.desktop_image_width == 'medium' %}2-col-tablet{% else %}3-col-tablet{% endif %}{% if section.settings.layout == 'text_first' %} image-with-text__grid--reverse{% endif %}{% if section.settings.content_layout == 'no-overlap' %} gradient color-{{ section.settings.color_scheme }}{% endif %}">
    <div class="image-with-text__media-item image-with-text__media-item--{{ section.settings.desktop_image_width }} image-with-text__media-item--{{ section.settings.desktop_content_position }} grid__item">
      <div class="{% if section.settings.image_mob != blank %} desktopShow {% endif %} image-with-text__media image-with-text__media--{{ section.settings.height }} {% if section.settings.image != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"{% endif %}
      >
        {%- if section.settings.image != blank -%}
          <img
            srcset="{%- if section.settings.image.width >= 165 -%}{{ section.settings.image | img_url: '165x' }} 165w,{%- endif -%}
              {%- if section.settings.image.width >= 360 -%}{{ section.settings.image | img_url: '360x' }} 360w,{%- endif -%}
              {%- if section.settings.image.width >= 535 -%}{{ section.settings.image | img_url: '535x' }} 535w,{%- endif -%}
              {%- if section.settings.image.width >= 750 -%}{{ section.settings.image | img_url: '750x' }} 750w,{%- endif -%}
              {%- if section.settings.image.width >= 1070 -%}{{ section.settings.image | img_url: '1070x' }} 1070w,{%- endif -%}
              {%- if section.settings.image.width >= 1500 -%}{{ section.settings.image | img_url: '1500x' }} 1500w,{%- endif -%}
              {{ section.settings.image | img_url: 'master' }} {{ section.settings.image.width }}w"
            src="{{ section.settings.image | img_url: '1500x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image.width }}"
            height="{{ section.settings.image.height }}"
          >
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
      {%- if section.settings.image_mob != blank -%}
      <div class="mobileShow image-with-text__media image-with-text__media--{{ section.settings.height }} {% if section.settings.image_mob != blank %}media{% else %}image-with-text__media--placeholder placeholder{% endif %}"
        {% if section.settings.height == 'adapt' and section.settings.image_mob != blank %} style="padding-bottom: {{ 1 | divided_by: section.settings.image_mob.aspect_ratio | times: 100 }}%;"{% endif %}
      >
          <img
            srcset="{%- if section.settings.image_mob.width >= 165 -%}{{ section.settings.image_mob | img_url: '165x' }} 165w,{%- endif -%}
              {%- if section.settings.image_mob.width >= 360 -%}{{ section.settings.image_mob | img_url: '360x' }} 360w,{%- endif -%}
              {%- if section.settings.image_mob.width >= 535 -%}{{ section.settings.image_mob | img_url: '535x' }} 535w,{%- endif -%}
              {%- if section.settings.image_mob.width >= 750 -%}{{ section.settings.image_mob | img_url: '750x' }} 750w,{%- endif -%}
              {%- if section.settings.image_mob.width >= 1070 -%}{{ section.settings.image_mob | img_url: '1070x' }} 1070w,{%- endif -%}
              {%- if section.settings.image_mob.width >= 1500 -%}{{ section.settings.image_mob | img_url: '1500x' }} 1500w,{%- endif -%}
              {{ section.settings.image_mob | img_url: 'master' }} {{ section.settings.image_mob.width }}w"
            src="{{ section.settings.image_mob | img_url: '1500x' }}"
            sizes="(min-width: {{ settings.page_width }}px) {{ settings.page_width | minus: 100 | divided_by: 2 }}px, (min-width: 750px) calc((100vw - 130px) / 2), calc((100vw - 50px) / 2)"
            alt="{{ section.settings.image_mob.alt | escape }}"
            loading="lazy"
            width="{{ section.settings.image_mob.width }}"
            height="{{ section.settings.image_mob.height }}"
          >
      </div>
      {% endif %}
      
    </div>
    <div class="image-with-text__text-item grid__item" id="{% if page.handle contains 'farma-movil' %}page-with-text{% endif %}">
      <div id="ImageWithText--{{ section.id }}" class="image-with-text__content image-with-text__content--{{ section.settings.desktop_content_position }} image-with-text__content--desktop-{{ section.settings.desktop_content_alignment }} image-with-text__content--mobile-{{ section.settings.mobile_content_alignment }} image-with-text__content--{{ section.settings.height }} gradient color-{{ section.settings.color_scheme }}" style= "background-color: {{ section.settings.background }}">
      
        {%- for block in section.blocks -%}
          {% case block.type %}
            {%- when 'heading' -%}
            {% if block.settings.heading != blank %}
              <h2 class="image-with-text__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
                {{ block.settings.heading | escape }}
              </h2>
            {% endif %}
            {% if block.settings.subheading != blank %}
              <h3 class="image-with-text__subheading">{{ block.settings.subheading }}</h3>
            {% endif %}  
              
            {%- when 'caption' -%}
              <div class="caption-icon-wrap">
                {% if block.settings.icon != blank %}
                <img src="{{ block.settings.icon | img_url: '50x'}}" alt="" />
                {% endif %}
                <p class="image-with-text__text image-with-text__text--caption {{ block.settings.text_style }} {{ block.settings.text_style }}--{{ block.settings.text_size }} {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                  {{ block.settings.caption | escape }}
                </p>
              </div>
            {%- when 'text' -%}
              <div class="image-with-text__text rte {% if block.settings.enable_Check_Icon != blank %}check-icon-text{% endif %} {{ block.settings.text_style }}" {{ block.shopify_attributes }}>
                {% if block.settings.enable_Check_Icon != blank %}{% render 'icon-check' %}{% endif %}
                {{ block.settings.text }}
              </div>
            {%- when 'button' -%}
              {%- if block.settings.button_label != blank -%}
                <a{% if block.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ block.settings.button_link }}"{% endif %} class="button farma-tel {% if block.settings.button_style_secondary %} button--secondary{% else %} button--primary{% endif %}" {{ block.shopify_attributes }}>
                  {{ block.settings.button_label | escape }}
                  {% unless template contains 'index' %}
                    <img src="{{ 'icon--call.svg' | file_url }}" alt="call" />
                  {% endunless %}
                </a>
              {%- endif -%} 
          {%- endcase -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

