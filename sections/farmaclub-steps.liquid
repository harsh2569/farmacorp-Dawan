  sections/farmaclub-steps.liquid
-->

<style>

  .farmaclub__steps {
    padding-top: 5rem;
  }  

  .steps__heading {
    font-size: 5.6rem;
    line-height: 6.2rem;
    font-weight: 500;
    letter-spacing: -2.4px;
    margin: 0;
    margin-bottom: 3.6rem;
  }

  .steps__subtext {
    font-weight: 400;
    font-size: 1.8rem;
    line-height: 2.6rem;
    letter-spacing: -0.3px;
    margin-bottom: 3.6rem;
    color: #000000;
  }

  .farmaclub-steps__heading {
    font-weight: 600;
    font-size: 2.2rem;
    line-height: 3rem;
    letter-spacing: -0.55px;
    margin: 0;
    margin-bottom: 0.6rem;
    color: #000; 
  }

  .farmaclub-steps__subtext {
    font-weight: 400;
    font-size: 1.8rem;
    line-height: 2.6rem;
    letter-spacing: -0.3px;
    color: #3E4462;
    margin: 0;
    margin-bottom: 3.8rem;
  }

  .farmaclub--steps {
    position: relative;
  }

  .farmaclub__span {
    position: absolute;
    width: 4.8rem;
    height: 4.8rem;
    background-color: #EFF2F6;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    left: -64px;
    font-weight: 700;
    font-size: 24px;
    line-height: 26px;
    letter-spacing: -0.685714px;
  }

  @media screen and (min-width: 750px) {
    .steps__text {
      border-right: 1px solid;
      border-color: #DFE4EA;  
      width: 62% !important;
      padding-right: 12rem;
    }

    .farmaclub__steps-blocks {
      padding-left: 16.4rem;
      width: 38% !important;
    }
  }

  @media screen and (max-width: 989px) {
    
    .steps__text {
      text-align: center;
    }

    .steps__heading {
      font-size: 2.4rem;
      line-height: 3.2rem;
      letter-spacing: -0.2px;
    }

    .steps__subtext {
      font-size: 1.6rem;
      line-height: 2.6rem;
      letter-spacing: -0.3px;
    }

    .farmaclub-steps__heading {
      font-size: 2rem;
      line-height: 2.6rem;
      letter-spacing: -0.2px;
    }

    .farmaclub-steps__subtext {
      font-size: 1.6rem;
      line-height: 2.4rem;
      letter-spacing: -0.2px;
    }

    .farmaclub__steps-blocks {
      padding-left: 6.4rem;
      margin-top: 4.8rem;
    }
      
    .farmaclub__steps {
    padding-top: 1.8rem;
    }

    .farmaclub__steps .grid--2-col-tablet {
    margin-bottom: 6.7rem;
    }

  }
</style>

<div class="farmaclub__steps">
  <div class="page-width">
    <div class="grid grid--1-col grid--2-col-tablet">
      <div class="grid__item steps__text">
        {% if section.settings.heading != blank %}
          <h2 class="steps__heading">{{ section.settings.heading }}</h2>
        {% endif %}
        {% if section.settings.subtext != blank %}
          <p class="steps__subtext">{{ section.settings.subtext }}</p>
        {% endif %}
        {% if section.settings.button_text != blank %}
          <a class="button button--farmaclub farmaclub__button" href="{{ section.settings.    button_link }}">{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
      <div class="grid__item farmaclub__steps-blocks">
        {% for block in section.blocks %}
        <div class="farmaclub--steps">
          <span class="farmaclub__span">{{ forloop.index }}</span>
          {% if block.settings.heading != blank %}
            <h4 class="farmaclub-steps__heading">{{ block.settings.heading }}</h4>
          {% endif %}
          {% if block.settings.subtext != blank %}
            <p class="farmaclub-steps__subtext">{{ block.settings.subtext }}</p>
          {% endif %}
        </div>          
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Farmaclub Steps",
  "class": "spaced-section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "blocks": [
    {
      "type": "steps_block",
      "name": "Steps Block",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "textarea",
          "id": "subtext",
          "label": "Subtext"
        }
      ]
    }
  ]
}
{% endschema %}