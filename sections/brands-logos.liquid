<style>
    .brands-logos-section {
        margin: 12rem 0 10rem;
    }
    .brands-logos-section .slider .slider__slide {
        padding: 0 2.5rem;
        display: flex;
        align-items: center;
    }
    .brands-logos-section .slider-mobile-gutter {
        max-width: 110rem;
        margin: 0 auto;
    }
    .brands-logos-section .slider {
        max-width: 104.5rem;
        margin: 0 auto;
    }
    .brands-logos-section h3 {
        font-weight: 500;
        font-size: 16px;
        line-height: 24px;
        text-align: center;
        color: #667085;
        margin-top: 0;
        margin-bottom: 4.8rem;
    }
    .brands-logos-section .slider .slider__slide img {
        max-width: 200px;
    }

  @media screen and (max-width: 767px) {
    .brands-logos-section .slider .slider__slide img {
        max-width: 112px;
    }
    .brands-logos-section .slider .slider__slide {
        padding: 0 1.2rem;
    }
    .brands-logos-section h3 {
        margin-bottom: 4.8rem;
    }
    .brands-logos-section {
        margin: 7.3rem 0 7.8rem;
    }
  }
</style>
<div class="brands-logos-section">
    <div class="page-width">
        <h3>{{section.settings.heading}}</h3>
        <slider-component class="slider-mobile-gutter">
        <ul id="Slider-{{ section.id }}" class="grid grid--2-col slider--everywhere grid--one-third-max grid--5-col-desktop grid--quarter-max {% if section.blocks.size > 2 %} slider slider--tablet {% endif %} negative-margin " role="list">
            {% for block in section.blocks %}
            {% if block.settings.image != blank %}
            <li id="Slide-{{ section.id }}-{{ forloop.index }}" class="logo__item{% if section.blocks.size > 2 %} slider__slide{% endif %}">                
                <img src="{{ block.settings.image | img_url: '250x'}}" alt="{{ block.settings.image.alt | escape }}" />
            </li>
    {% endif %}
    {% endfor %}
    </ul>
    <div class="slider-buttons no-js-hidden {{section.blocks.size}} {% if section.blocks.size < 5 %} medium-hide{% endif %}{% if section.blocks.size < 3 %} small-hide{% endif %}">
        <button type="button" class="slider-button slider-button--prev" name="previous" aria-label="{{ 'general.slider.previous_slide' | t }}">{% render 'icon-slider-left' %}</button>
        <div class="slider-counter caption hidden">
          <span class="slider-counter--current">1</span>
          <span aria-hidden="true"> / </span>
          <span class="visually-hidden">{{ 'general.slider.of' | t }}</span>
          <span class="slider-counter--total">{{ products_to_display }}</span>
        </div>
        <button type="button" class="slider-button slider-button--next" name="next" aria-label="{{ 'general.slider.next_slide' | t }}">{% render 'icon-slider-right' %}</button>
    </div>
        </slider-component>
    </div>
</div>

{% schema %}
{
  "name": "t:sections.brands-logos.name",
  "class": "spaced-section spaced-section--full-width",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.brands-logos.settings.heading.label"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "t:sections.brands-logos.blocks.brands.name",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "t:sections.brands-logos.blocks.brands.settings.logos.label"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "t:sections.brands-logos.presets.name",
      "blocks": [
      ]
    }
  ]
}
{% endschema %}
