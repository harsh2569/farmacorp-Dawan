{{ 'logo-strip.css' | asset_url | stylesheet_tag }}

<div class="page-width logo-strip">
    <div class="title-wrapper-with-link logo-strip__title">  
        {% if section.settings.title != blank %}
            <h2 class="title">{{ section.settings.title }}</h2>    
        {% endif %} 
        {% if section.settings.link_text != blank %} 
            <div>
                <a href="{{ section.settings.link_url }}" class="link">{{ section.settings.link_text}}</a>            
            </div>
        {% endif %}
    </div>
    <div class="grid grid--6-col-tablet logo-strip__grid-item">
    {% for block in section.blocks %}    
            <div class="grid__item logo-strip__image">
                {% if block.settings.image != blank %}
                <img src="{{ block.settings.image | img_url:'100x' }}">
                {% endif %}
            </div>
    {% endfor %}
    </div>
</div>


{% schema %}
{
    "name": "Logo Strip",
    "class": "spaced-section",
    "settings": [
        {
            "type": "text",
            "id": "title",
            "default": "Marcas destacacadas",
            "label": "Title"
        },
        {
            "type": "text",
            "id": "link_text",
            "label": "Link Text"
        },
        {
            "type": "url",
            "id": "link_url",
            "label": "Link URL"
        }        
    ],
    "blocks": [
        {
            "type": "image",
            "name": "Image",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                }
            ]
        }
    ],
    "presets":[
        {
            "name": "Logo Strip",
            "blocks":[
                {
                    "type": "image"
                },
                {
                    "type": "image"
                },
                {
                    "type": "image"
                }
            ]
        }
    ]
}
{% endschema %}